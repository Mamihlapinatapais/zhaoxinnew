/* 第一部分 */
swiper{
  height: 332rpx;
  width:710rpx;
  border-radius: 10rpx;
  margin-left:22rpx;
  margin-top:25rpx;
  overflow:hidden;  /* 让照片循环的时候不变成直角 */
}
swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 10rpx; 
}
swiper .wx-swiper-dot{
    width:12rpx;
    display: inline-flex;
    height: 12rpx;
    justify-content:space-between;
}

 swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;
    background:white;
    border-radius: 10rpx;
    opacity: 0.4;
    
} 
 swiper .wx-swiper-dot-active::after{
    content: '';
    flex-grow: 50;
    border-radius: 10rpx;
    background:white;  
} 

 swiper-item{
  height: 332rpx;
  width:710rpx;
  border-radius: 10rpx;
  overflow:hidden;  /* 让照片循环的时候不变成直角 */
} 

swiper-item image {
  height: 332rpx;
  width: 710rpx;
}

